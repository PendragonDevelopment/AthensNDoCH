<div class="content-section-a">
  <div class="container">
    <div class="row">
      <p id="notice"><%= notice %></p>

      <h1>Listing Projects</h1>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.title %></td>
              <td><%= markdown(project.description) %></td>
              <td><%= link_to project.title, project %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
